{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "off",
            4
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-debugger": "warn",
        "no-empty": "warn",
        "no-extra-boolean-cast":"warn",
        "array-callback-return": "warn",
        "block-scoped-var": "error",
        "consistent-return": "error",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-fallthrough": "warn",
        "no-loop-func": "warn",
        "no-new-wrappers": "warn",
        "no-unused-expressions": "warn",
        "no-unused-vars": [
            "warn", {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-with": "error",
        "prefer-promise-reject-errors": [
            "warn", {
                "allowEmptyReject": true
            }
        ],
        "strict": "warn",
        "no-shadow": "error",
        "no-shadow-restricted-names": "error",
        "no-use-before-define": "error",
        "no-buffer-constructor": "warn",
        "no-path-concat": "warn",
        "brace-style": [
            "1tbs", {
                "allowSingleLine": true
            }
        ],
        "no-var": "warn"
    }
}
